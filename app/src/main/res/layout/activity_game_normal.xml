<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="il.co.afeka.com.memorygame.GameActivity">
    <include
        layout="@layout/header"
        android:id="@+id/gameInfo"/>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/gameLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gameInfo"
        app:layout_constraintVertical_weight="4">


        <ImageButton
            android:id="@+id/btn1"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="mainFunc"
            android:tag="fish"
            android:src="@drawable/pic_star"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />


        <ImageButton
            android:id="@+id/btn2"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="koopa"
            app:layout_constraintLeft_toRightOf="@id/btn1"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/btn3"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="goomba"
            app:layout_constraintLeft_toRightOf="@id/btn2"
            app:layout_constraintTop_toTopOf="parent"/>


        <ImageButton
            android:id="@+id/btn4"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="mario"

            app:layout_constraintLeft_toRightOf="@id/btn3"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageButton
            android:id="@+id/btn5"
            android:scaleType="fitCenter"

            android:adjustViewBounds="true"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="plant"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintLeft_toLeftOf="parent"/>


        <ImageButton
            android:id="@+id/btn6"
            android:scaleType="fitCenter"
            android:layout_width="75dp"
            android:layout_height="75dp"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="luigi"
            app:layout_constraintTop_toBottomOf="@id/btn2"
            app:layout_constraintLeft_toRightOf="@id/btn5"/>

        <ImageButton
            android:id="@+id/btn7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="goomba"
            app:layout_constraintLeft_toRightOf="@id/btn6"
            app:layout_constraintTop_toBottomOf="@id/btn3"/>

        <ImageButton
            android:id="@+id/btn8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="koopa"
            app:layout_constraintLeft_toRightOf="@id/btn7"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            />


        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="bullet"
            app:layout_constraintTop_toBottomOf="@id/btn5"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/btn10"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="coin"
            app:layout_constraintTop_toBottomOf="@id/btn6"
            app:layout_constraintLeft_toRightOf="@id/btn9"/>


        <ImageButton
            android:id="@+id/btn11"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="luigi"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintLeft_toRightOf="@id/btn10"/>


        <ImageButton
            android:id="@+id/btn12"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="coin"
            app:layout_constraintTop_toBottomOf="@id/btn8"
            app:layout_constraintLeft_toRightOf="@id/btn11"/>

        <ImageButton
            android:id="@+id/btn13"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="mario"
            app:layout_constraintTop_toBottomOf="@id/btn9"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <ImageButton
            android:id="@+id/btn14"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="bullet"
            app:layout_constraintLeft_toRightOf="@id/btn13"
            app:layout_constraintTop_toBottomOf="@id/btn10"/>


        <ImageButton
            android:id="@+id/btn15"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="plant"
            app:layout_constraintLeft_toRightOf="@id/btn14"
            app:layout_constraintTop_toBottomOf="@id/btn11"/>

        <ImageButton
            android:id="@+id/btn16"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="fitCenter"

            android:onClick="mainFunc"
            android:src="@drawable/pic_star"
            android:tag="fish"
            app:layout_constraintLeft_toRightOf="@id/btn15"
            app:layout_constraintTop_toBottomOf="@id/btn12"/>



    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>